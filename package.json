{
  "name": "@trajano/react-hooks",
  "version": "2.0.0",
  "description": "General purpose hooks for React apps.",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.modern.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "react": "17 || 18"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.2.4",
    "@types/lodash": "^4.14.191",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "date-fns": "^2.29.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.8.1",
    "react": "18",
    "react-dom": "18",
    "react-scripts": "^5.0.1",
    "typedoc": "^0.23.23",
    "typescript": "^4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tsc --noEmit",
      "jest"
    ],
    "src/**/*.{ts,tsx,json}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ]
  },
  "scripts": {
    "build": "microbundle --format modern,cjs --jsx React.createElement",
    "prepare": "microbundle --format modern,cjs --jsx React.createElement",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx .",
    "test": "react-scripts test",
    "deploy": "gh-pages -d doc/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trajano/react-hooks.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trajano/react-hooks/issues"
  },
  "homepage": "https://trajano.github.io/react-hooks"
}
