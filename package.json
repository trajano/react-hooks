{
  "name": "@trajano/react-hooks",
  "version": "2.0.1",
  "description": "General purpose hooks for React apps.",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.modern.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "react": "17 || 18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.2.5",
    "@types/lodash": "^4.14.191",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/parser": "^5.48.1",
    "commitlint": "^17.4.1",
    "date-fns": "^2.29.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-universe": "^11.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.8.2",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react": "18",
    "react-dom": "18",
    "react-scripts": "^5.0.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tsc --noEmit",
      "jest"
    ],
    "src/**/*.{ts,tsx,json}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/strict",
      "plugin:jest/recommended",
      "plugin:react-hooks/recommended",
      "plugin:testing-library/react",
      "prettier"
    ],
    "rules": {
      "arrow-body-style": "error",
      "curly": "error",
      "eqeqeq": "error",
      "logical-assignment-operators": "error",
      "multiline-comment-style": "error",
      "no-floating-decimal": "error",
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "prefer-numeric-literals": "error",
      "prefer-object-spread": "error",
      "prefer-template": "error",
      "yoda": "error",
      "@typescript-eslint/ban-types": "off"
    },
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    }
  },
  "scripts": {
    "build": "microbundle --format modern,cjs --jsx React.createElement --tsconfig tsconfig.build.json",
    "prepare": "microbundle --format modern,cjs --jsx React.createElement --tsconfig tsconfig.build.json",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx src/",
    "test": "react-scripts test",
    "deploy": "gh-pages -d doc/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trajano/react-hooks.git"
  },
  "author": "",
  "license": "EPL-2.0",
  "bugs": {
    "url": "https://github.com/trajano/react-hooks/issues"
  },
  "homepage": "https://trajano.github.io/react-hooks"
}
